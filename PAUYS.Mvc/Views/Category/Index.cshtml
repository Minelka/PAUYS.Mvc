@using PAUYS.ViewModel.Concrete
@model IEnumerable<CategoryViewModel>

@{
    ViewData["Title"] = "Categories List";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<a href="@Url.Action("Add", "Category")" class="btn btn-primary mb-3">Add New Category</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Shape</th>
            <th>Description</th>
            <th>Using Area</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Shape</td>
                <td>@category.Description</td>
                <td>@category.UsingArea</td>
                <td>
                    <a href="@Url.Action("Detail", "Category", new { id = category.Id })" class="btn btn-info btn-sm">View Details</a>
                    <!-- You can add edit and delete functionality here -->
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-warning">No categories found.</div>
}

