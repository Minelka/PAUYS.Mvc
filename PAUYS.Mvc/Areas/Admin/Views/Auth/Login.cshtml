@using PAUYS.ViewModel.Concrete
@model LoginViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}

<form asp-controller="Auth" asp-action="Login" method="post" class="form-horizontal">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="UserName" class="control-label col-md-2">Email</label>
        <div class="col-md-10">
            <input asp-for="UserName" class="form-control" id="UserName" name="UserName" value="@Model.UserName" />
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="Password" class="control-label col-md-2">Şifreniz</label>
        <div class="col-md-10">
            <input asp-for="Password" type="password" class="form-control" id="Password" name="Password" value="@Model.Password" />
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
        </div>
    </div>
</form>
