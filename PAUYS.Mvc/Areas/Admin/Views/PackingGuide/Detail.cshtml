@using PAUYS.ViewModel.Concrete
@model PackingGuideViewModel

@{
    ViewData["Title"] = "Ambalaj Rehberi Detayı";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml"; // İlgili layout sayfasını ayarlayın
}

<h2>@ViewData["Title"]</h2>

@if (TempData["RecordNotFounded"] != null)
{
    <div class="alert alert-warning">
        @TempData["RecordNotFounded"]
    </div>
}

<div class="card">
    <div class="card-header">
        <h4>Ambalaj Rehberi Detayı: @Model.Confirmation</h4>
    </div>
    <div class="card-body">
        <div class="form-group">
            <label for="Confirmation">Onay Süreci:</label>
            <p>@Model.Confirmation</p>
        </div>
        <div class="form-group">
            <label for="Sample">Numune Süreci:</label>
            <p>@Model.Sample</p>
        </div>
        <div class="form-group">
            <label for="MoldProduction">Kalıp Üretimi:</label>
            <p>@Model.MoldProduction</p>
        </div>
        <div class="form-group">
            <label for="Finalization">Finalizasyon:</label>
            <p>@Model.Finalization</p>
        </div>


        <div class="form-group">
            <a href="@Url.Action("Index", "PackingGuide")" class="btn btn-secondary">Geri Dön</a>
            <!-- İsterseniz düzenleme veya silme için butonlar ekleyebilirsiniz -->
            <a href="@Url.Action("Update", "PackingGuide", new { id = Model.Id })" class="btn btn-primary">Düzenle</a>
        </div>
    </div>
</div>

