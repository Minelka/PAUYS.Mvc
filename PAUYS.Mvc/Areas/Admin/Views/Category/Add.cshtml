@using PAUYS.ViewModel.Concrete
@model CategoryViewModel

@{
    ViewData["Title"] = "Kategori Ekle";
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout1.cshtml";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
else if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-action="Add" method="post" class="form-horizontal">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="Name" class="control-label col-md-2">Kategori Adı</label>
        <div class="col-md-10">
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="Shape" class="control-label col-md-2">Şekli</label>
        <div class="col-md-10">
            <input type="text" class="form-control" id="Shape" name="Shape" value="@Model.Shape" />
            @Html.ValidationMessageFor(model => model.Shape, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="Description" class="control-label col-md-2">Açıklama</label>
        <div class="col-md-10">
            <textarea class="form-control" id="Description" name="Description">@Model.Description</textarea>
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="UsingArea" class="control-label col-md-2">Kullanım Alanı</label>
        <div class="col-md-10">
            <input type="text" class="form-control" id="UsingArea" name="UsingArea" value="@Model.UsingArea" />
            @Html.ValidationMessageFor(model => model.UsingArea, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Ekle</button>
        </div>
    </div>
</form>

